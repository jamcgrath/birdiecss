{
  ".badge": {
    "--badge-padding": "var(--space-0-5) var(--space-2)",
    "--badge-fs": "var(--overline-small)",
    "--badge-lh": "1",
    "--badge-fw": "var(--fw-700)",
    "--badge-ls": "var(--ls-1)",
    "--badge-gap": "var(--space-1)",
    "--badge-border-radius": "var(--space-1)",
    "--badge-bg": "var(--gray-3)",
    "--badge-color": "var(--gray-7)",
    "background": "var(--badge-bg)",
    "color": "var(--badge-color)",
    "padding": "var(--badge-padding)",
    "fontSize": "var(--badge-fs)",
    "lineHeight": "var(--badge-lh)",
    "fontWeight": "var(--badge-fw)",
    "gap": "var(--badge-gap)",
    "borderRadius": "var(--badge-border-radius)",
    "display": "inline-flex",
    "alignItems": "center",
    "justifyContent": "center",
    "textTransform": "uppercase",
    "letterSpacing": "var(--space-1px)"
  },
  ".badge-sm": {
    "--badge-fs": "var(--overline-small)"
  },
  ".badge-med": {
    "--badge-fs": "var(--overline-large)",
    "--badge-padding": "var(--space-1) var(--space-2)"
  },
  ".badge-success": {
    "--badge-color": "var(--success)",
    "--badge-bg": "var(--success-light)"
  },
  ".badge-error": {
    "--badge-color": "var(--error)",
    "--badge-bg": "var(--error-light)"
  },
  ".badge-alert": {
    "--badge-color": "var(--alert)",
    "--badge-bg": "var(--alert-light)"
  },
  ".badge-info": {
    "--badge-color": "var(--info)",
    "--badge-bg": "var(--info-light)"
  },
  ".badge-warning": {
    "--badge-color": "var(--warning)",
    "--badge-bg": "var(--warning-light)"
  },
  ".badge-navy-dark": {
    "--badge-color": "var(--white)",
    "--badge-bg": "var(--navy-dark)"
  }
}